<h1>申し送り入力フォーム</h1>
<%= form_with(model: @post, local: true) do |form| %>
  <%= form.select :category, [["仕事", "work"], ["プライベート", "private"], ["その他", "other"]], include_blank: "ジャンル" %>
<% end %>

<%= form_with model: @post, local: true do |form| %>
  <p><%= form.select :category, [["daycare"], ["healthcarefacility"], ["ward"],["outpatient"]], include_blank: "部署名" %></p>
  <p><%= form.label :content, "内容" %></p>
  <p><%= form.text_area :content %></p>
  <p><%= form.file_field :image %></p>
  <p><%= form.submit "送信" %></p>
<% end %>





